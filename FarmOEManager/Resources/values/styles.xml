<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TitleStyle" parent="@android:style/TextAppearance.Medium">
    <!-- <item name="android:textColor">#00007f</item> -->
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
    <item name="android:gravity">center_horizontal|center_vertical</item>
    <item name="android:layout_marginBottom">5dp</item>
  </style>
  <style name="SmallHeaderStyle" parent="@android:style/TextAppearance.Small">
    <!-- <item name="android:textColor">#00007f</item> -->
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
    <item name="android:gravity">center_vertical|left</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:layout_marginLeft">2dp</item>
    <item name="android:layout_marginRight">2dp</item>
  </style>
  <style name="ButtonStyle" parent="@android:style/TextAppearance.Large">
    <item name="android:textColor">#007f7f</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
    <item name="android:textSize">30sp</item>
  </style>
  <style name="SmallButtonStyle" parent="@android:style/Widget.Button.Small">
    <item name="android:textColor">#007f7f</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
  </style>
  <style name="ListItemStyle1" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">#7f0000</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
  </style>
  <style name="ListItemStyle2" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">#00007f</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
  </style>
  <style name="SpinnerStyle" parent="@android:style/TextAppearance.Medium">
    <item name="android:background">@android:drawable/alert_light_frame</item>
  </style>
  <style name="ListViewStyle" parent="@android:style/TextAppearance.Medium">
    <item name="android:background">@android:drawable/alert_light_frame</item>
    <item name="android:layout_marginLeft">2dp</item>
    <item name="android:layout_marginRight">2dp</item>
  </style>
</resources>